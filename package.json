{
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "main": "dist/index.js",
  "files": [
    "./dist/*"
  ],
  "exports": {
    ".": {
      "browser": "./dist/browser/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./browser": {
      "import": "./dist/browser/index.js",
      "require": "./dist/browser/index.cjs"
    },
    "./node": {
      "import": "./dist/node/index.js",
      "require": "./dist/node/index.cjs"
    },
    "./util": {
      "import": "./dist/util.js",
      "require": "./dist/util.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "esbuild ./test/index.ts --bundle | tapout",
    "test:node": "esbuild ./test/node.ts --bundle --platform=node --format=esm | node",
    "build-cjs": "esbuild src/*.ts src/node/*.ts src/browser/*.ts --format=cjs --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.cjs --sourcemap",
    "build-cjs:min": "esbuild src/index.ts src/util.ts --format=cjs --minify --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.min.cjs --sourcemap && esbuild src/node/index.ts --format=cjs --minify --keep-names --bundle --platform=node --tsconfig=tsconfig.build.json --outdir=./dist/node --out-extension:.js=.min.cjs --sourcemap && esbuild src/browser/index.ts --format=cjs --minify --keep-names --bundle --tsconfig=tsconfig.build.json --outdir=./dist/browser --out-extension:.js=.min.cjs --sourcemap",
    "build-esm": "esbuild src/*.ts src/node/*.ts src/browser/*.ts --format=esm --metafile=dist/meta.json --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --sourcemap && tsc --emitDeclarationOnly --project tsconfig.build.json --outDir dist",
    "build-esm:min": "esbuild ./src/browser/index.ts --format=esm --keep-names --bundle --tsconfig=tsconfig.build.json --minify --out-extension:.js=.min.js --outdir=./dist/browser --sourcemap && esbuild ./src/node/index.ts --format=esm --keep-names --bundle --platform=node --tsconfig=tsconfig.build.json --minify --out-extension:.js=.min.js --outdir=./dist/node --sourcemap",
    "build-example": "mkdir -p ./public && rm -rf ./public/* && VITE_DEBUG_MODE=staging vite --mode staging --base=\"/repo-name\" build",
    "build-docs": "typedoc ./src/index.ts",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-esm && npm run build-esm:min && npm run build-cjs:min",
    "start": "vite",
    "example:browser": "vite",
    "//build-node-example": "esbuild ./example/node.ts --bundle --platform=node --format=esm --outfile=./dist/node-example.js --external:@contentauth/c2pa-web",
    "//example:node": "npm run build-node-example && node ./dist/node-example.js",
    "example:node": "esbuild ./example/node.ts --platform=node | node",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@contentauth/c2pa-node": "^0.4.0",
    "@contentauth/c2pa-web": "^0.5.3",
    "@substrate-system/asn1": "^0.0.10",
    "@substrate-system/exif": "^1.0.8",
    "@substrate-system/one-webcrypto": "^1.1.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@substrate-system/debug": "^0.9.24",
    "@substrate-system/tapout": "^0.0.30",
    "@substrate-system/tapzero": "^0.10.15",
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "htm": "^3.1.1",
    "markdown-toc": "^1.2.0",
    "postcss-nesting": "^13.0.2",
    "preact": "^10.27.0",
    "tap-spec": "^5.0.0",
    "typedoc": "^0.28.9",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  },
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)",
  "license": "SEE LICENSE IN LICENSE"
}
